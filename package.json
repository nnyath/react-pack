{
  "name": "react-pack",
  "version": "1.0.0a",
  "description": "webpack react es6 hot boilerplate",
  "main": "dist/app.js",
  "repository": "",
  "author": "Kenny Inthirath <kenny.inthirath@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "webpack-dev-server --open --port 3000 --host 0.0.0.0 --config=webpack.dev.js",
    "dist": "cross-env NODE_ENV=production webpack --config=webpack.dist.js --display-error-details",
    "lint": "npm run lint:js & npm run lint:css",
    "lint:js": "eslint ./src",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:css": "stylelint 'src/**/*.css'",
    "lint:staged": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "lint:js",
      "git add"
    ],
    "*.css": [
      "lint:css",
      "git add"
    ]
  },
  "pre-commit": [
    "lint:staged"
  ],
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-hmre": "^1.1.1",
    "cross-env": "^5.1.1",
    "css-loader": "^0.28.7",
    "cssnano": "^3.10.0",
    "eslint": "^4.12.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-config-standard-jsx": "^4.0.2",
    "eslint-config-standard-react": "^5.0.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.4.2",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "^7.5.1",
    "eslint-plugin-standard": "^3.0.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.5",
    "glob": "^7.1.2",
    "image-webpack-loader": "^3.4.2",
    "jest": "^21.2.1",
    "lint-staged": "^6.0.0",
    "postcss-cssnext": "^3.0.2",
    "postcss-import": "^11.0.0",
    "postcss-loader": "^2.0.9",
    "pre-commit": "^1.2.2",
    "react-hot-loader": "^3.1.3",
    "style-loader": "^0.19.0",
    "stylelint": "^8.3.1",
    "stylelint-config-standard": "^18.0.0",
    "stylelint-declaration-use-variable": "^1.6.0",
    "stylelint-order": "^0.8.0",
    "uglifyjs-webpack-plugin": "^1.1.2",
    "url-loader": "^0.6.2",
    "webpack": "^3.6.0",
    "webpack-dev-middleware": "^1.12.2",
    "webpack-dev-server": "^2.9.7",
    "webpack-hot-middleware": "^2.21.0",
    "webpack-merge": "^4.1.1",
    "webpack-module-hot-accept": "^1.0.5"
  },
  "dependencies": {
    "immutability-helper": "^2.6.0",
    "immutable": "^3.8.2",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-promise-middleware": "^5.0.0",
    "redux-thunk": "^2.2.0"
  }
}
